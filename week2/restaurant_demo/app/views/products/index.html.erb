<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Products</h1>
<%= link_to 'New Product', new_product_path %>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Gluten free</th>
            <th scope="col">Vegan</th>
            <th scope="col">Vegetarian</th>
            <th scope="col">Kosher</th>
            <th scope="col">Available</th>
            <th scope="col">Catering</th>
            <th scope="col">Featured</th>
            <th colspan="10"></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <th scope="row"><%= product.id %></th>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.gluten_free %></td>
            <td><%= product.vegan %></td>
            <td><%= product.vegetarian %></td>
            <td><%= product.kosher %></td>
            <td><%= product.available %></td>
            <td><%= product.catering %></td>
            <td><%= product.featured %></td>
            <td><%= link_to 'Show', product, class:'btn btn-secondary' %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class:'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
        </tr>
        <% end %>
    </tbody>
</table>
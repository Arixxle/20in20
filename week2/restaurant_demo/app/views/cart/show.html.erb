<div id="cart-item">
    <%= render 'cart_items'%>
</div>
<hr>
<%= form_tag charges_path do %>
<article>
    <% if flash[:error].present?%>
    <div id="error_explanation">
        <p><%= flash[:error] %></p>
    </div>
    <% end %>
    <label class="amount">
        <span>Amount: $<%= current_order.subtotal %></span>
    </label>
</article>
<% end %>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="An online order for order #<%= current_order.id %>" data-amount="<%= current_order.subtotal * 100 %>" data-local="auto"></script>
<div class="menu-container">
    <div class="row">
        <div class="col-6">
            <input class="form-control" type="text" placeholder="Search" aria-label="Search">
            <%= render 'layouts/filter', local: %>


        </div>
    </div>
    <div class="row">
        <% 3.times do %>
        <% @products.each do |product| %>
        <div class="col-4">
            <h5><%=product.name %></h5>
            <p><%= product.description %></p>
            <span><%= product.price %> | <%= product.catering ? "Available for catering" : "" %>
        </div>
        <% end %>
        <% end %>
    </div>
</div>